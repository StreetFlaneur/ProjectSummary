<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.techidea.library.widget.GradationScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_head" />

            <TextView
                android:id="@+id/textview_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:padding="10dp"
                android:text="@string/artile_content"
                android:textColor="@color/grey_blue" />

        </LinearLayout>

    </com.techidea.library.widget.GradationScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.techidea.library.widget.StatusView
            android:id="@+id/statusview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            app:fitsView="@id/root_layout" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_common"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/blue">

            <TextView
                android:id="@+id/toolbar_common_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />

        </android.support.v7.widget.Toolbar>

    </LinearLayout>

</RelativeLayout>