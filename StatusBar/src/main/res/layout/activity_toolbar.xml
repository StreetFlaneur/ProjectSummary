<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <com.techidea.library.widget.GradationScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_imagehead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="imagehead" />

            <Button
                android:id="@+id/button_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="white"
                android:textColor="@color/grey_blue" />

            <Button
                android:id="@+id/button_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="red"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:text="blue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:text="orage"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textview_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artile_content"
                android:textColor="@color/grey_blue" />

            <ImageView
                android:id="@+id/imageview_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    </com.techidea.library.widget.GradationScrollView>


</LinearLayout>